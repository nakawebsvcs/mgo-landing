<header id="cs-navigation">
  <div class="cs-container">
    <!--Nav Logo-->
    <div class="branding-wrapper">
      <a href="/" class="cs-logo" aria-label="back to home">
        <img src="/assets/svgs/turtle-logo.svg" alt="logo" width="210" height="29" aria-hidden="true" decoding="async" />
      </a>
      <div class="title-container">
        <h1 class="site-title">MAUI GIFT OUTLET</h1>
        <img src="/assets/svgs/wave.svg" alt="waves" width="230" height="45" aria-hidden="true" decoding="async" class="wave-decoration" />
      </div>
    </div>

    <!--Mobile Navigation-->
    <div class="lg:cs-hidden"></div>
    <nav class="cs-nav" role="navigation">
      <!--Mobile Nav Toggle-->
      <button class="cs-toggle" id="mobile-menu-toggle" aria-label="mobile menu toggle" aria-expanded="false" aria-controls="cs-expanded-ul">
        <div class="cs-box" aria-hidden="true">
          <span class="cs-line cs-line1" aria-hidden="true"></span>
          <span class="cs-line cs-line2" aria-hidden="true"></span>
          <span class="cs-line cs-line3" aria-hidden="true"></span>
        </div>
      </button>
      <!-- Static Navigation Links -->
      <nav class="cs-ul-wrapper">
        <ul id="cs-expanded-ul" class="cs-ul">
          <li class="cs-li">
            <a href="/" class:list={["cs-li-link", { "cs-active": Astro.url.pathname === "/" }]}>300 Maalaea Rd, Wailuku, HI 96793</a>
          </li>
          <li class="cs-li">
            <a href="/" class:list={["cs-li-link", { "cs-active": Astro.url.pathname === "/about" }]}>(808) 244-7700</a>
          </li>
          <li class="cs-li">
            <a href="/" class:list={["cs-li-link", { "cs-active": Astro.url.pathname === "/shop" }]}>Open Daily 6AM-6PM</a>
          </li>

        </ul>
        <!--Mobile settings-->
        <div class="cs-settings lg:cs-hidden">
        </div>
      </nav>
    </nav>

    <!--Desktop settings-->
    <div class="cs-hidden lg:cs-flex">
    </div>
  </div>
</header>

